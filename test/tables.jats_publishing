  </caption>
  <table>
    <thead>
      <tr>
        <th align="right">Right</th>
        <th align="left">Left</th>
        <th align="center">Center</th>
        <th>Default</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td align="right">12</td>
        <td align="left">12</td>
        <td align="center">12</td>
        <td>12</td>
      </tr>
      <tr>
        <td align="right">123</td>
        <td align="left">123</td>
        <td align="center">123</td>
        <td>123</td>
      </tr>
      <tr>
        <td align="right">1</td>
